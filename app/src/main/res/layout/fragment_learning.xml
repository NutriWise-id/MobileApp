<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="10dp"
    tools:context=".ui.learning.LearningFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_education_title"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:fontFamily="@font/baloo_bhaina_bold_font"
            android:text="EDUKASI"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_education_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Ayo Pelajari Tentang Stunting"
            android:textSize="16sp"
            android:layout_marginBottom="-3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_education_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_item_learning_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_education_title2"
            tools:listitem="@layout/item_fragment_learning"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>